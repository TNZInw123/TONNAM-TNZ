#include <iostream>
using namespace std;

int main() {
    int shape;
    int r;
    int l;
    int w;
    int b;
    int h;
    cout << "Press 1 for Circle \n";
    cout << "Press 2 for Rectangle \n";
    cout << "Press 3 for Triangle \n";
    cout << "Press Your Choice : ";
    cin >> shape;
    switch (shape) {
        case 1 :{
            cout << "Type your radius :";
            cin >> r;
            int cans = (3.14*r*r);
            cout << "Area of the circle is " << cans << endl;
            break;
        }
        case 2 :{
            cout << "Type your length : ";
            cin >> l;
            cout << "Type your width : ";
            cin >> w;
            int rans = (l*w);
            cout << "Area of the rectangle is " << rans << endl;
            break;
        }
        case 3 :{
            cout << "Type your base : ";
            cin >> b;
            cout << "Type your height : ";
            cin >> h;
            int tans =((b*h)/2);
            cout << "Area of the triangle is " << tans << endl;
            break;
        }
    }
    return 0;
}
